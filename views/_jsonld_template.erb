{
  "@type": "CreativeWork",
<% if param_exists? :url %>
  "@id": "<%= params[:url] %>",
  "url": "<%= params[:url] %>",
<% end %>
<% if param_exists? :title %>
  "name": "<%= params[:title] %>",
<% end %>
<% if param_exists? :description %>
  "description": "<%= params[:description] %>",
<% end %>
<% if param_exists? :about %>
  "about": "<%= params[:about] %>",
<% end %>
<% if param_exists? :publisher %>
  "publisher": {
    "name": "<%= params[:publisher] %>",
    "@type": "Organization"
  },
<% end %>
<% if param_exists? :author %>
  "author": {
    "name": "<%= params[:author] %>",
    "@type": "Person"
  },
<% end %>
<% if param_exists? :timeRequired %>
  "timeRequired": "<%= params[:timeRequired] %>",
<% end %>
<% if param_exists? :educationalUse %>
  "educationalUse": <%= params[:educationalUse] %>,
<% end %>
<% if param_exists? :educationalRole %>
  "educationalRole": <%= params[:educationalRole] %>,
<% end %>
<% if param_exists? :ageRange %>
  "ageRange": <%= params[:ageRange] %>,
<% end %>
<% if param_exists? :learningResourceType %>
  "learningResourceType": <%= params[:learningResourceType] %>,
<% end %>
<% if param_exists? :mediaType %>
  "learningResourceType": <%= params[:mediaType] %>,
<% end %>
<% if param_exists? :standards %>
  "educationalAlignment": [ <% params[:standards].each_with_index do |param, idx| %>
    {
        "alignmentType": "<%= param.split('|')[1] %>",
        "educationalFramework": "Common Core State Standards",
        "targetName": "<%= param.split('|')[0] %>",
        "@type": "AlignmentObject"
    }<%= ',' if idx < (params[:standards].size - 1) %><% end %>
  ],
<% end %>
  "@context": [
    {
      "url": { "@type": "@id" },
      "@vocab": "http://schema.org/"
    },
    {
      "lrmi": "http://lrmi.net/the-specification#",
      "useRightsUrl": {
        "@id": "lrmi:useRightsUrl",
        "@type": "@id"
      }
    }
  ]
}